{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@element/*": ["components/elements/*"],
      "@layout/*": ["components/layouts/*"],
      "@module/*": ["components/modules/*"],
      "@template/*": ["components/templates/*"],
      "@constant/*": ["constants/*"],
      "@hook/*": ["hooks/*"],
      "@util/*": ["utils/*"],
    },
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "storybook-static",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "jest.setup.ts"
  ]
}
